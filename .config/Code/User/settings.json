{
    "editor.autoClosingBrackets": "always",
    "editor.codeLens": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.detectIndentation": true,
    "editor.find.autoFindInSelection": "always",
    "editor.folding": true,
    "editor.fontSize": 12,
    "editor.fontWeight": "normal",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.enabled": true,
    "editor.matchBrackets": "always",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestionsDelay": 25,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",
    "editor.showFoldingControls": "mouseover",
    "editor.snippetSuggestions": "top",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "guides.enabled": false,
    "redhat.telemetry.enabled": false,
    "terminal.integrated.fontSize": 18,
    "window.zoomLevel": 2,
    "workbench.colorTheme": "NarutoDark",
    "files.associations": {
        "*.py": "python",
        ".bash_functions": "shellscript",
        ".docker_functions": "shellscript",
        ".vimrc": "shellscript"
    },
    "files.exclude": {
        "**/.coverage": true,
        "**/.eggs": true,
        "**/.env": true,
        "**/.envs": true,
        "**/.gitignore": true,
        "**/.gitmodules": true,
        "**/.hound.yml": true,
        "**/.idea": true,
        "**/.pyc": true,
        "**/.pylintrc": true,
        "**/.venv": true,
        "**/.vscode": true,
        "**/*.pyc": true,
        "**/*.swp": true
    },
    "diffEditor.renderSideBySide": false,
    "editor.gotoLocation.multipleImplementations": "goto",
    "explorer.confirmDelete": false,
    "git.confirmSync": false,
    "python.autoUpdateLanguageServer": true,
    "python.linting.flake8Enabled": true,
    "python.linting.maxNumberOfProblems": 50,
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "python",
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "window.titleBarStyle": "custom",
    "workbench.statusBar.visible": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        ".git/**",
        "**/__pycache__/**",
        "**/node_modules/**"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        },
        "editor.formatOnPaste": true,
        "editor.formatOnSave": false,
        "editor.rulers": [
            90,
            120
        ],
        "editor.tabSize": 4
    },
    "breadcrumbs.enabled": true,
    "window.menuBarVisibility": "classic",
    "todo-tree.highlights.enabled": false,
    "python.formatting.provider": "black",
    "python.venvFolders": [
        "/home/mmphego/.venvs"
    ],
    "python.venvPath": "/home/mmphego/.venvs",
    "python.linting.flake8Args": [
        "--max-line-length=90"
    ],
    "python.formatting.blackArgs": [
        "-l",
        "90"
    ],
    "python.formatting.blackPath": "/home/mmphego/.local/bin/black",
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "python",
    "git.autorefresh": false,
    "gitlens.views.repositories.autoRefresh": false,
    "extensions.autoUpdate": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "jenkins.pipeline.linter.connector.user": "mmphego",
    "jenkins.pipeline.linter.connector.url": "http://ci.camlab.kat.ac.za/pipeline-model-converter/validate",
    "jenkins.pipeline.linter.connector.crumbUrl": "http://ci.camlab.kat.ac.za/crumbIssuer/api/xml?xpath=concat(//crumbRequestField,%22:%22,//crumb)",
    "remove-tabs-on-save.ignoreFileExtensions": [
        "*.go"
    ],
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path.linux": "/home/mmphego/.vs-kubernetes/tools/minikube/linux-amd64/minikube"
    }
}
